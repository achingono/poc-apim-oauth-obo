@page
@model IndexModel
@{
    ViewData["Title"] = "OAuth OBO Chat Interface";
}

<div class="container-fluid h-100" style="max-width: 1200px;">
    <div class="row mb-3">
        <div class="col">
            <h2>OAuth OBO Chat Interface</h2>
            <p class="text-muted">Test OAuth On-Behalf-Of flow with Azure APIM</p>
            <p class="text-info">Logged in as: @User.Identity?.Name</p>
        </div>
        <div class="col-auto">
            <form method="post" asp-page-handler="Clear" class="d-inline">
                <button type="submit" class="btn btn-warning me-2">Clear Chat</button>
            </form>
            <a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <div class="row" style="height: calc(100vh - 250px);">
        <div class="col">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Chat History</h5>
                </div>
                <div class="card-body overflow-auto" id="chatContainer" style="height: calc(100% - 60px);">
                    @if (Model.ChatHistory.Count == 0)
                    {
                        <div class="text-center text-muted mt-5">
                            <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
                            <p>No messages yet. Send a message to start testing the OAuth OBO flow.</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var message in Model.ChatHistory)
                        {
                            <div class="mb-3 @(message.IsUser ? "text-end" : "text-start")">
                                <div class="d-inline-block @(message.IsUser ? "bg-primary text-white" : "bg-light") rounded p-3" style="max-width: 80%;">
                                    <div class="small text-muted mb-1">
                                        @(message.IsUser ? "You" : "API Response") - @message.Timestamp.ToString("HH:mm:ss")
                                    </div>
                                    @if (message.IsUser)
                                    {
                                        <div>@message.Message</div>
                                    }
                                    else
                                    {
                                        <pre class="mb-0" style="white-space: pre-wrap; word-wrap: break-word; background: transparent; border: none; padding: 0; color: inherit; font-size: 0.9rem;">@message.Message</pre>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <form method="post" class="card">
                <div class="card-body">
                    <div class="mb-3">
                        <label for="userMessage" class="form-label">Your Message:</label>
                        <textarea asp-for="UserMessage" class="form-control" id="userMessage" rows="3" 
                                  placeholder="Type your message here..." required></textarea>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-send-fill"></i> Send
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-scroll to bottom of chat when page loads
        window.addEventListener('load', function() {
            var chatContainer = document.getElementById('chatContainer');
            if (chatContainer) {
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }
        });
    </script>
}
